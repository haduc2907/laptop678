@model IEnumerable<(TTCSN.Entities.Product product, int quantity)>

@{
    ViewData["Title"] = "Thanh toán";
    decimal totalAmount = 0;
}

<div class="container mt-5">
    <h2 class="mb-4">Xác nhận đơn hàng</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <!-- Chi tiết đơn hàng -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sản phẩm trong giỏ hàng</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var (product, quantity) in Model)
                                {
                                    var itemTotal = product.Price * quantity;
                                    totalAmount += itemTotal;
                                    <tr>
                                        <td>
                                            <strong>@product.Name</strong>
                                        </td>
                                        <td>@product.Price.ToString("N0") ₫</td>
                                        <td>@quantity</td>
                                        <td>@itemTotal.ToString("N0") ₫</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Form thanh toán -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Tổng đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tạm tính:</span>
                            <strong>@totalAmount.ToString("N0") ₫</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Phí vận chuyển:</span>
                            <strong>Miễn phí</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <h5>Tổng cộng:</h5>
                            <h5 class="text-danger">@totalAmount.ToString("N0") ₫</h5>
                        </div>

                        <form asp-action="Index" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label class="form-label"><strong>Phương thức thanh toán:</strong></label>

                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="0" checked>
                                    <label class="form-check-label" for="cod">
                                        <i class="bi bi-cash-coin"></i> Thanh toán khi nhận hàng (COD)
                                    </label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="vnpay" value="1">
                                    <label class="form-check-label" for="vnpay">
                                        <i class="bi bi-credit-card"></i> Thanh toán qua VNPay
                                    </label>
                                </div>
                            </div>

                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                </div>
                            }

                            <button type="submit" class="btn btn-success btn-lg w-100">
                                <i class="bi bi-check-circle"></i> Xác nhận đặt hàng
                            </button>
                        </form>

                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="bi bi-arrow-left"></i> Quay lại giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <h4>Giỏ hàng trống!</h4>
            <p>Bạn chưa có sản phẩm nào trong giỏ hàng.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                Tiếp tục mua sắm
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Optional: Add confirmation before submit
        document.querySelector('form').addEventListener('submit', function(e) {
            var paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            var methodName = paymentMethod === "0" ? "COD" : "VNPay";

            if (!confirm('Xác nhận đặt hàng với phương thức ' + methodName + '?')) {
                e.preventDefault();
            }
        });
    </script>
}